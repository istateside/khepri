<nav class="nav-group">
  <h5 class="nav-group-title">Processes</h5>

  {{#each processes.list as |process|}}
    {{#link-to 'process' process.name class="nav-group-item"}}
      <span class="icon icon-db-shape {{process.state}}"></span>
      <span class="name">{{process.name}}</span>

      <span class="actions">
        <span {{action 'restart' process.name}} class="icon icon-cw"></span>
        {{#if process.alive}}
          <span {{action 'stop' process.name}} class="icon icon-stop"></span>
        {{else}}
          <span {{action 'start' process.name}} class="icon icon-play"></span>
        {{/if}}
      </span>
    {{/link-to}}
  {{/each}}
</nav>
